@using TravelTripProje.Models.Siniflar
@model List<Blog>
<div class="padding1">
    <h4>En Beğendiğimiz Yerler</h4>
    <div class="box-left">
        @foreach (var x in Model)
        {
        <div class="bot-img">
            <img src="@x.BlogImage" alt="" style="width:140px;height:65px;" />
            <a href="/Blog/BlogDetay/@x.ID"style="color:crimson">@x.Baslik</a>
        </div>
            <div class="bot-desc">
                <p style="color:black">@x.Aciklama.Substring(0,90)...@x.Tarih.ToString("dd.MM.yyyy")</p>
            </div>
            <div class="clear"></div>
        }
    </div>
    @Html.Action("Partial5","Default")
   </div>




